{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{ .Folder }}",
  "final_space": true,
  "version": 4,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "powerline",
          "template": "{{ if .WSL }}WSL at{{ end }} {{.Icon}} ",
          "background": "#3A3A3A",
          "foreground": "#D0CBC4"
        },
        {
          "type": "shell",
          "style": "powerline",
          "template": "{{ if eq .Name \"bash\" }}{{ else if eq .Name \"fish\" }}{{ else if eq .Name \"zsh\" }}{{ else }}{{ .Name }}{{ end }} ",
          "background": "#3A3A3A",
          "foreground": "#D0CBC4"
        },
        {
          "type": "python",
          "style": "powerline",
          "template": "  {{ .Venv }} {{ .Full }} ",
          "background": "#5E81AC",
          "foreground": "#ECEFF4",
          "powerline_symbol": "",
          "options": {
            "display_mode": "environment"
          }
        },
        {
          "type": "path",
          "style": "powerline",
          "template": " {{ .Path }} ",
          "background": "#458588",
          "foreground": "#282828",
          "powerline_symbol": "",
          "options": {
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }} ",
          "background": "#98971A",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9248{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff4500{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FF{{ end }}"
          ],
          "foreground": "#282828",
          "leading_diamond": "",
          "trailing_diamond": "",
          "powerline_symbol": "",
          "options": {
            "branch_template": "{{ trunc 25 .Branch }}",
            "fetch_status": true,
            "branch_icon": " ",
            "branch_identical_icon": "●"
          }
        },
        {
          "type": "root",
          "style": "powerline",
          "template": "  ",
          "background": "#ffff66",
          "foreground": "#111111",
          "powerline_symbol": ""
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "template": "{{ if gt .Code 0 }}[{{ .Code }}]{{ end }}",
          "foreground": "#fb4934"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#CD4277",
          "style": "plain",
          "template": "$",
          "type": "text"
        }
      ]
    }
  ]
}
